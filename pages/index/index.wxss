page{
    color: #666;
    padding: 10rpx;
}
.nav_wrap{

}
.nav{
    white-space: nowrap;
    padding: 5rpx 0;
}

.nav_item{
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
}
.nav_item.active{
    border-bottom: 5px solid #ffb3cf;
    color: #de688b;
    font-weight: bold;
}
/*轮播图*/
.slides{
    margin-top: 10rpx;
}
.slides swiper{
    height: 220rpx;
}
.slides navigator{
    width: 100%;
    height: 100%;
}
.slides image{
    width: 100%;
    height: 100%;
}

/*视频列表*/
.video_wrap{
    display:flex;
    flex-wrap:wrap;
    padding: 5rpx;
    justify-content: space-between;
}
.video_item{
    width: 48%;
    margin-bottom: 20rpx;
}
.video_img{
    position: relative;
}
.video_img image{
    width: 100%;
    border-radius: 15rpx;
}
.video_img .video_info{
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    color: #fff;
    font-size: 25rpx;
}
.video_info image{
    height: 27rpx;
    width: 27rpx;
    margin-right: 10rpx;
}
.video_title{
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ollipsis;
    word-wrap:break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}